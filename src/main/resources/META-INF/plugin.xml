<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.garetht.typstsupport</id>
    <name>Typst Support</name>
    <vendor>Gareth</vendor>

    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <platform.lsp.serverSupportProvider
                implementation="com.github.garetht.typstsupport.languageserver.TypstSupportProvider"/>
        <notificationGroup id="TypstSupport"
                           displayType="BALLOON"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileEditorProvider implementation="com.github.garetht.typstsupport.editor.TypstEditorProvider"/>

        <fileType
                name="Typst"
                implementationClass="com.github.garetht.typstsupport.language.filetype.TypstFileType"
                fieldName="INSTANCE"
                language="Typst"
                extensions="typ"/>
        <fileType
                name="Typst Math"
                implementationClass="com.github.garetht.typstsupport.language.filetype.TypstMathFileType"
                fieldName="INSTANCE"
                language="TypstMath"
                extensions="typm"/>
        <fileType
                name="Typst Code"
                implementationClass="com.github.garetht.typstsupport.language.filetype.TypstCodeFileType"
                fieldName="INSTANCE"
                language="TypstCode"
                extensions="typc"/>

        <projectConfigurable instance="com.github.garetht.typstsupport.configuration.TypstSettingsConfigurable" displayName="Typst Support Settings" />
    </extensions>
</idea-plugin>
